  <script>
    const tabs = document.querySelectorAll('.tab');
    const formArea = document.getElementById('form-area');

    function switchTab(tab) {
      tabs.forEach(t => t.classList.remove('active'));
      if (tab === 'login') {
        tabs[0].classList.add('active');
        formArea.innerHTML = `
          <div style="text-align:center">
            <div class="icon-top">ğŸ”</div>
            <h2>Welcome back</h2>
            <p>Sign in to your account</p>
          </div>
          <form>
            <input type="email" placeholder="your@email.com" required />
            <div class="input-group">
              <input type="password" placeholder="Password" id="password" required />
              <span class="eye-toggle" onclick="togglePassword('password')">ğŸ‘ï¸</span>
            </div>
            <div class="form-actions">
              <label><input type="checkbox" /> Remember me</label>
              <a href="#">Forgot password?</a>
            </div>
            <button class="btn" type="submit">ğŸ” Sign in</button>
          </form>
        `;
      } else {
        tabs[1].classList.add('active');
        formArea.innerHTML = `
          <div style="text-align:center">
            <div class="icon-top">ğŸ‘¤</div>
            <h2>Create an account</h2>
            <p>Join us today</p>
          </div>
          <form>
            <div class="name-row">
              <input type="text" placeholder="First name" required />
              <input type="text" placeholder="Last name" required />
            </div>
            <input type="email" placeholder="your@email.com" required />
            <div class="input-group">
              <input type="password" placeholder="Password" id="reg-password" required />
              <span class="eye-toggle" onclick="togglePassword('reg-password')">ğŸ‘ï¸</span>
            </div>
            <small>Password must be at least 8 characters long</small>
            <input type="password" placeholder="Confirm password" required />
            <div class="terms">
              <label><input type="checkbox" required /> I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></label>
            </div>
            <button class="btn" type="submit">ğŸ‘¤ Create account</button>
          </form>
        `;
      }
    }

    function togglePassword(id) {
      const input = document.getElementById(id);
      if (input) {
        input.type = input.type === 'password' ? 'text' : 'password';
      }
    }
  </script>
